<div class="vic-widget vic-widget-articlelist" id="widget-{{widget.id}}">
{% block actions %}{{cms_widget_actions(widget)}}{% endblock actions %}

{% block content %}

    <div class="blog-head-home-container">
        <h2><a href="{{ widget.globalLinkUrl }}">{{ widget.globalLinkTitle }}<small>{{ widget.globalLinkLabel }}</a></small></h2>
    </div>

    {% if articles|length %}
    <div class="lionbars" style="height:180px;overflow: auto;margin-bottom: 30px;">
      <table class="articlelist table-dl-horizontal">

          {% for key, item in articles %}
              {% include "VictoireArticleListBundle:Commons:Widget/articlelist/showItem.html.twig" %}
          {% endfor %}
      </table>
    </div>
    <script>
      $(function(){
        initLionbars('#homepage-articlelist');
      });
    </script>
    {% else %}
    <p>{{ 'widget.articlelist.empty'|trans({}, 'victoire') }}</p>
    {% endif %}

{% endblock content %}

</div>

{% endblock body %}
